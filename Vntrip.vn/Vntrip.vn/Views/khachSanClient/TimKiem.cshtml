                                            <div style="margin-left:0px" class="paginate">
                                                @Html.PagedListPager(Model, page => Url.Action("TimKiem", "khachSanClient", new { page }))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </main>
                    </div>
                </div>
            </div>
        </div>

    </form>
</body>

