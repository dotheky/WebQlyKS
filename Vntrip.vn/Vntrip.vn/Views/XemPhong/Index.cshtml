                    @i.DiaChi;

                }
            </p>
        </div>
        <div id="ha">

            <div class="container">

                <div class="row d-inline-flex">
                    <!-- Gallery Item 1 -->
                    @foreach (var i in ViewBag.AnhKhachSan)
                    {
                        <div class="col-sm-3">
                            <div class="d-flex flex-column text-center border height100">
                                <div>
                                    <img src="@i.HinhAnhKhachSan" alt="" />
                                </div>
                            </div>
                        </div>
                    }
                    <!-- bản đồ -->
