                <div class="row">
                    <div class="col">
                        <p style="margin-top:5px">Ngày nhận trả phòng</p>
                        <div class="box" style="width:400px;margin-top:-10px">
                            <input type="date" style="border:none;margin-top:7px;margin-left:20px" value="" />&nbsp;--&nbsp;
                            <input type="date" style="border:none" />
                        </div>
                    </div>
                    <div class="col">
                        <p style="margin-top:5px">Số phòng và khách</p>
                        <div style="margin-top:-10px">
                            <input type="text" name="option" style="width:330px" class="box" />
                        </div>
                    </div>
                    <div class="col">
                        <button class="box" style="background-color:green;width:150px;color:white;margin-top:35px;height:50px;font-size:15px;">
                            Cập nhật
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div style="box-shadow: 0 2px 8px rgba(0,0,0,.15);">
            @foreach (var item in Model)
            {
                <div class="container">

                    <div class="row">
                        <div class="col-2">

                            <img src="@item.HinhAnhPhong" alt="" />

                        </div>
                        <div class="col">
                            <h2><a href="#" data-toggle="modal" data-target="#myModalXem">@item.TenPhong</a></h2>
                            <div class="modal fade" id="myModalXem" role="dialog">
                                <div class="modal-dialog modal-lg">

                                    <!-- Modal content-->
                                    <div class="modal-content1">
                                        <div class="modal-header">
                                            <h4 class="modal-title">Xem chi tiết</h4>
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="container-fluid">

                                                <div class="row">
                                                    <div class="col">
                                                        <img src="@item.HinhAnhPhong" alt="" />
                                                    </div>
                                                    <div class="col">
                                                        <p>@item.MoTaChiTiet</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <i class="fas fa-bed"></i> @item.SoGiuong Giường cỡ queen &nbsp;
                                    <i class="far fa-square"></i> Diện tích @item.DienTich &nbsp;
                                    <i class="fas fa-air-conditioner"></i> Điều hòa &nbsp;
                                    <i class="fas fa-smoking-ban"></i> Không hút thuốc &nbsp;
                                    <i class="fas fa-tv"></i> TV màn hình phẳng
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <a href="#" data-toggle="modal" data-target="#myModalXem" style="text-decoration:none; color:orange;font-size:16px;">Xem chi tiết</a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col" style="font-size:18px;">
                            <i class="fas fa-dollar-sign"></i>&nbsp;Hủy phòng&nbsp;&nbsp;
